<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.credential.AddEditIdentityCredentialActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Identity Information" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Document Type Spinner - Moved to Top -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Document Type *"
                android:textAppearance="?attr/textAppearanceBodyMedium" />

            <Spinner
                android:id="@+id/spinner_document_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- National ID Fields Container -->
            <LinearLayout
                android:id="@+id/layout_national_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_full_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Full Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Father's Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_fathers_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Father's Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fathers_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mother's Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_mothers_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Mother's Name"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_mothers_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- National ID Number with Copy Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_national_id"
                        style="@style/Widget.AeroPass.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="National ID Number *"
                        app:startIconDrawable="@drawable/ic_person">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_national_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Copy National ID Icon Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_copy_national_id"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Copy National ID Number"
                        app:icon="@drawable/ic_copy"
                        app:iconSize="24dp" />

                </LinearLayout>

                <!-- Date of Birth -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nid_date_of_birth"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Date of Birth (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nid_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nid_address"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Address *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nid_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:lines="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nid_notes"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Notes"
                    app:startIconDrawable="@drawable/ic_note">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nid_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Category"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <Spinner
                    android:id="@+id/spinner_national_id_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Passport Fields Container -->
            <LinearLayout
                android:id="@+id/layout_passport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Passport Number with Copy Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_passport_number"
                        style="@style/Widget.AeroPass.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Passport Number *"
                        app:startIconDrawable="@drawable/ic_person">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_passport_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Copy Passport Number Icon Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_copy_passport_number"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Copy Passport Number"
                        app:icon="@drawable/ic_copy"
                        app:iconSize="24dp" />

                </LinearLayout>

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_passport_full_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Full Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_passport_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Father's Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_passport_fathers_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Father's Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_passport_fathers_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mother's Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_passport_mothers_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Mother's Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_passport_mothers_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date of Birth -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_passport_date_of_birth"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Date of Birth (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_passport_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date of Issue -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_date_of_issue"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Date of Issue (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_date_of_issue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date of Expiry -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_date_of_expiry"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Date of Expiry (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_date_of_expiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_passport_notes"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Notes"
                    app:startIconDrawable="@drawable/ic_note">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_passport_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Category"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <Spinner
                    android:id="@+id/spinner_passport_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Driving License Fields Container -->
            <LinearLayout
                android:id="@+id/layout_driving_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Driving License Number with Copy Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_driving_license_number"
                        style="@style/Widget.AeroPass.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Driving License Number *"
                        app:startIconDrawable="@drawable/ic_person">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_driving_license_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Copy Driving License Number Icon Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_copy_driving_license_number"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Copy Driving License Number"
                        app:icon="@drawable/ic_copy"
                        app:iconSize="24dp" />

                </LinearLayout>

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_dl_full_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Full Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_dl_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Father's Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_dl_fathers_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Father's Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_dl_fathers_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date of Birth -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_dl_date_of_birth"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Date of Birth (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_dl_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date of Issue -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_dl_date_of_issue"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Date of Issue (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_dl_date_of_issue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Validity -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_validity"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Validity (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_validity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Issuing Authority -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_issuing_authority"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Issuing Authority *"
                    app:startIconDrawable="@drawable/ic_web">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_issuing_authority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_dl_notes"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Notes"
                    app:startIconDrawable="@drawable/ic_note">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_dl_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Category"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <Spinner
                    android:id="@+id/spinner_dl_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Birth Certificate Fields Container -->
            <LinearLayout
                android:id="@+id/layout_birth_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bc_full_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Full Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bc_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Father's Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bc_fathers_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Father's Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bc_fathers_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mother's Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bc_mothers_name"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Mother's Name *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bc_mothers_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Birth Certificate Number with Copy Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_birth_certificate_number"
                        style="@style/Widget.AeroPass.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Birth Certificate Number *"
                        app:startIconDrawable="@drawable/ic_person">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_birth_certificate_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Copy Birth Certificate Number Icon Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_copy_birth_certificate_number"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Copy Birth Certificate Number"
                        app:icon="@drawable/ic_copy"
                        app:iconSize="24dp" />

                </LinearLayout>

                <!-- Date of Birth -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bc_date_of_birth"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Date of Birth (DD/MM/YYYY) *"
                    app:startIconDrawable="@drawable/ic_timer">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bc_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bc_address"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Address *"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bc_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:lines="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bc_notes"
                    style="@style/Widget.AeroPass.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Notes"
                    app:startIconDrawable="@drawable/ic_note">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bc_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Category"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <Spinner
                    android:id="@+id/spinner_bc_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>


            <!-- Web Portal -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_web_portal"
                style="@style/Widget.AeroPass.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Web Portal URL (Optional)"
                app:startIconDrawable="@drawable/ic_web">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_web_portal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri" />

            </com.google.android.material.textfield.TextInputLayout>


            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Identity Information"
                app:icon="@drawable/ic_save" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>